<h5>You'll see the search result here.</h5>

<ul>
  <% for i in 0..@trips.count-1 %>
      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Train #<%= @trips[i][2]["train_number"] %></span>


              <p>Departure at <%= @stations.find(@trips[i][0]['station_id']).name %> : <%= @trips[i][0]["departure_time"].to_datetime.strftime("%l:%M %p") %></p>
              <p>Arrival at <%= @stations.find(@trips[i][1]['station_id']).name %> : <%= @trips[i][1]["departure_time"].to_datetime.strftime("%l:%M %p") %></p>

            </div>
            <div class="card-action">
              <%= link_to "View Details", stops_details_path(@trips[i][0]['id']) %>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</ul>
